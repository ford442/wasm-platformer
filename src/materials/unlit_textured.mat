// src/materials/unlit_textured.mat
material {
    name : "Unlit Textured",
    blending : transparent,
    shadingModel : unlit,
    parameters : [
        {
            type : sampler2d,
            name : "baseColorMap" // Correctly named parameter
        },
        {
            type : float4,
            name : "baseColor"      // Correctly named parameter
        }
    ],
    requires : [
        "uv0"
    ]
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        // Use the correct parameter names here
        material.baseColor = texture(materialParams_baseColorMap, getUV0()) * materialParams_baseColor;
    }
}
