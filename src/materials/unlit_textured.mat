// src/materials/unlit_textured.mat
material {
    name: "Unlit Textured",
    shadingModel: unlit,
    blending: transparent,
    parameters: [
        {
            type: sampler2d,
            name: "baseColorMap"
        }
    ],
    requires: [
        "uv0"
    ]
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor = texture(materialParams_baseColorMap, getUV0());
    }
}
